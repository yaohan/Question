<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/touch_view_48">
    <TextView
        android:id="@+id/tv_options_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:textSize="@dimen/font_size_normal"
        android:textColor="?attr/font_black"
        android:layout_marginLeft="@dimen/margin_space_32"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tv_options_center"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/touch_view_48"
        android:gravity="center_vertical"
        android:text="1/3"
        android:textColor="?attr/font_black"
        android:textSize="@dimen/font_size_normal"
        android:layout_marginLeft="@dimen/margin_content_72"/>
    <TextView
        android:id="@+id/tv_options_right"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@+id/rb_options_right"
        android:paddingRight="@dimen/margin_space_16"/>
    <RadioButton
        android:id="@+id/rb_options_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_space_16"
        android:layout_centerVertical="true"/>
</RelativeLayout>