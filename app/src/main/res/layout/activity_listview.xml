<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/background_white">

    <include layout="@layout/layout_toolbar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_list_first"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/touch_view_64"
                    android:paddingLeft="@dimen/margin_space_16"
                    android:text="今天"
                    android:textSize="@dimen/font_size_menu"
                    android:textStyle="bold"
                    android:textColor="?attr/font_gray"
                    android:gravity="center_vertical"/>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"/>
                <TextView
                    android:id="@+id/tv_select_all"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/touch_view_64"
                    android:paddingLeft="@dimen/margin_space_16"
                    android:paddingRight="@dimen/margin_space_16"
                    android:text="全选"
                    android:textSize="@dimen/font_size_menu"
                    android:textStyle="bold"
                    android:textColor="?attr/font_gray"
                    android:gravity="center_vertical|right"
                    android:visibility="gone"/>
            </LinearLayout>

            <com.ssdut411.app.questionanswer.widget.ListViewForScrollView
                android:id="@+id/lv_first_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:divider="@android:color/transparent"
                android:dividerHeight="@dimen/margin_space_16"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_list_second"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/touch_view_64"
                android:paddingLeft="@dimen/margin_space_16"
                android:text="以前"
                android:textStyle="bold"
                android:textSize="@dimen/font_size_menu"
                android:textColor="?attr/font_gray"
                android:gravity="center_vertical"/>
            <com.ssdut411.app.questionanswer.widget.ListViewForScrollView
                android:id="@+id/lv_second_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:divider="@android:color/transparent"
                android:dividerHeight="@dimen/margin_space_16"/>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>