<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_white"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/view_space_8" />

    <ListView
        android:id="@+id/lv_select_group"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:divider="#00000000"
        android:dividerHeight="@dimen/view_space_0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/touch_view_48"
        android:background="?attr/theme_green"
        android:minHeight="@dimen/touch_view_48"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/margin_space__16"
            android:text="@string/selected_student"
            android:textColor="?attr/font_white"
            android:textSize="@dimen/font_size_normal" />

        <TextView
            android:id="@+id/tv_student_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_space__16"
            android:layout_marginRight="@dimen/margin_space__16"
            android:background="@drawable/shape_red_solid"
            android:text="@string/sure"
            android:textColor="?attr/font_white"
            android:textSize="@dimen/font_size_normal" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_select_student"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:divider="#00000000"
        android:dividerHeight="@dimen/view_space_0" />
</LinearLayout>