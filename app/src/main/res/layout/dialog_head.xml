<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_width"
    android:minWidth="@dimen/dialog_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="?attr/background_white"
    android:padding="@dimen/touch_icon_24">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="上传头像"
        android:textStyle="bold"
        android:textColor="?attr/font_black"
        android:textSize="@dimen/font_size_title" />

    <TextView
        android:id="@+id/tv_dialog_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_space_8"
        android:text="请选择上传方式"
        android:textColor="?attr/font_black"
        android:textSize="@dimen/font_size_menu" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/touch_icon_24"
        android:orientation="horizontal"
        android:gravity="right">

        <TextView
            android:id="@+id/bt_dialog_cancel"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/touch_icon_24"
            android:text="本地上传"
            android:textColor="?attr/font_black"
            android:textSize="@dimen/font_size_menu" />
        <TextView
            android:id="@+id/bt_dialog_sure"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="拍照"
            android:textColor="?attr/font_black"
            android:textSize="@dimen/font_size_menu" />

    </LinearLayout>



</LinearLayout>