<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_width"
    android:minWidth="@dimen/dialog_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="?attr/background_white"
    android:padding="@dimen/touch_icon_24">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/exit"
        android:textStyle="bold"
        android:textColor="?attr/font_black"
        android:textSize="@dimen/font_size_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/view_space_8">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作业名称："
                android:textStyle="bold"
                android:textColor="?attr/font_black"
                android:textSize="@dimen/font_size_menu"/>
            <TextView
                android:id="@+id/tv_dialog_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="?attr/font_black"
                android:textSize="@dimen/font_size_menu"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_space_4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学生列表："
                android:textStyle="bold"
                android:textColor="?attr/font_black"
                android:textSize="@dimen/font_size_menu"/>
            <TextView
                android:id="@+id/tv_dialog_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="?attr/font_black"
                android:textSize="@dimen/font_size_menu"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_space_4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="题目数量："
                android:textStyle="bold"
                android:textColor="?attr/font_black"
                android:textSize="@dimen/font_size_menu"/>
            <TextView
                android:id="@+id/tv_dialog_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="?attr/font_black"
                android:textSize="@dimen/font_size_menu"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_space_4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="涉及知识："
                android:textColor="?attr/font_black"
                android:textStyle="bold"
                android:textSize="@dimen/font_size_menu"/>
            <TextView
                android:id="@+id/tv_dialog_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="?attr/font_black"
                android:textSize="@dimen/font_size_menu"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/touch_icon_24"
        android:orientation="horizontal"
        android:gravity="right">

        <TextView
            android:id="@+id/bt_dialog_cancel"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/touch_icon_24"
            android:text="@string/cancel"
            android:textColor="?attr/font_black"
            android:textSize="@dimen/font_size_menu" />
        <TextView
            android:id="@+id/bt_dialog_sure"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="?attr/font_black"
            android:textSize="@dimen/font_size_menu" />

    </LinearLayout>



</LinearLayout>